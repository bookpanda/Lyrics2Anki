{
    "extends": "tsconfig/nextjs.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@modules/*": ["src/modules/*"],
            "@styles/*": ["src/styles/*"],
            "@node_modules/*": ["node_modules/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
